@page
@using ProductsDB.Models
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row mt-3 mb-1">
        <div class="col-3">
            Выборка по всем товарам
        </div>
    </div>

    <div class="row mb-1">
        <div class="col-3">
            Продукт
        </div>
        <div class="col-3">
            Категория
        </div>
        <div class="col-2">
            Описание
        </div>
    </div>
    @{
        foreach(JoinedData jd in Model.allProducts)
        {
            <div class="row text-start border-bottom">
                <div class="col-3">
                    @jd.ProductName
                </div>
                <div class="col-3">
                    @jd.CategoryName
                </div>
                <div class="col-2">
                    @jd.ProductDescription
                </div> 
            </div>
        }
    }

    <div class="row mt-3 mb-1">
        <div class="col-3">
            Выборка по одной категории
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            Продукт
        </div>
        <div class="col-3">
            Категория
        </div>
        <div class="col-2">
            Описание
        </div>
    </div>
    @{
        foreach (JoinedData jd in Model.productsByCategory)
        {
            <div class="row text-start border-bottom">
                <div class="col-3">
                    @jd.ProductName
                </div>
                <div class="col-3">
                    @jd.CategoryName
                </div>
                <div class="col-2">
                    @jd.ProductDescription
                </div>
            </div>
        }
    }
</div>